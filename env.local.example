# ==============================================
# VOYAGE - Environment Variables Template
# ==============================================
# Kopieer dit bestand naar .env.local en vul de waardes in
# NOOIT .env.local committen naar git!

# ----------------------------------------------
# Application
# ----------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ----------------------------------------------
# Supabase
# ----------------------------------------------
# Haal deze keys op van: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_PROJECT_ID=your_project_id

# ----------------------------------------------
# External APIs
# ----------------------------------------------

# Google Maps Platform API
# Console: https://console.cloud.google.com/apis/credentials
# Enable: Maps JavaScript API, Places API, Geocoding API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# OpenWeatherMap API
# Sign up: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key

# ----------------------------------------------
# Security
# ----------------------------------------------
# Genereer met: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Invite link token encryption
# Genereer met: openssl rand -base64 32
INVITE_TOKEN_SECRET=your_invite_token_secret

# ----------------------------------------------
# Feature Flags (voor toekomstige features)
# ----------------------------------------------
NEXT_PUBLIC_ENABLE_AI_PLANNING=false
NEXT_PUBLIC_ENABLE_ADVANCED_BUDGET=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ----------------------------------------------
# Rate Limiting & Caching
# ----------------------------------------------
# Redis URL (optioneel voor caching, later toe te voegen)
# REDIS_URL=redis://localhost:6379

# API rate limits (requests per minute)
RATE_LIMIT_MAPS=50
RATE_LIMIT_WEATHER=60

# ----------------------------------------------
# Logging & Monitoring (optioneel)
# ----------------------------------------------
# SENTRY_DSN=your_sentry_dsn_here
# NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn

# ----------------------------------------------
# Development & Testing
# ----------------------------------------------
# Playwright test user credentials
TEST_USER_EMAIL=test@voyage.local
TEST_USER_PASSWORD=TestPassword123!

# Mock API responses in development
MOCK_EXTERNAL_APIS=false
